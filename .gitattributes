# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.txt text eol=lf

# Documentation
*.md text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.xlsx binary
*.xls binary

